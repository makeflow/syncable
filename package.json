{
  "name": "syncable-packages",
  "private": true,
  "scripts": {
    "link-global": "yarn workspace @syncable/core link && yarn workspace @syncable/server link && yarn workspace @syncable/client link",
    "lerna:publish": "lerna publish prerelease --npm-tag latest --registry=https://registry.npmjs.org",
    "build": "tsc --build tsconfig.build.json",
    "lint-prettier": "prettier --check \"**/*.{ts,tsx,js,jsx,json,yml,md}\"",
    "lint": "yarn lint-prettier && yarn workspace @syncable/core lint",
    "test": "yarn workspace @syncable/core test"
  },
  "devDependencies": {
    "@magicspace/configs": "^0.1.46",
    "@types/jest": "^23.3.13",
    "biu": "^0.2.19",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "lerna": "^3.10.6",
    "lodash": "^4.17.11",
    "mobx": "^5.8.0",
    "module-lens": "^0.1.3",
    "prettier": "^1.16.0",
    "rxjs": "^6.3.3",
    "tslib": "^1.9.3",
    "tslint": "^5.12.1",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.2.4"
  },
  "workspaces": {
    "packages": [
      "core",
      "server",
      "client"
    ]
  }
}
